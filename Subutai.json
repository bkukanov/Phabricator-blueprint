  "name": "${environmentName}",
  "description": "My static website",
  "containers": [ {
      "hostname": "${webContainerName}",
      "template": "apache",
      "peer-criteria": "HTTP-GROUP",
      "size": "${webContainerSize}",
      "port-mapping": [
        {
          "protocol": "http",
          "domain": "${domainName}",
          "internal-port": "80",
          "external-port": "80"
        },
        {
          "protocol": "tcp",
          "domain": "${domainName}",
          "internal-port": "22",
          "external-port": "4040"
        }
      ]
    }
  ],
  "peer-criteria": [ 
    {
      "name": "HTTP-GROUP",
      "max-price": "5",
      "avg-cpu-load": "50",
      "min-free-ram": "128",
      "min-free-disk-space": "10"
    }
  ],
  "user-variables":
  {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "My-Website",
      "validation": "[a-zA-Z0-9]+"
    },
    "domainName": {
      "description": "Enter the application domain name",
      "type": "string",
      "default": "simpleblueprint-container",
      "validation": "[a-zA-Z0-9]+"
    },
    "webContainerName": {
      "description": "Enter the container's hostname",
      "type": "string",
      "default": "apache",
      "validation": "[a-zA-Z0-9]+"
    },
    "webContainerSize": {
      "description": "Set the container size to SMALL, MEDIUM, or LARGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "SMALL,MEDIUM,LARGE"
    }
  },
  "ansible-configuration": {
    "source-url": "https://github.com/subutai-blueprints/example-website/archive/master.zip",
    "ansible-playbook": "setup-site.yml",
    "extra-vars": [
      {
        "key": "foo",
        "value": "bar"  
      }
    ],
    "groups": [
      {
        "name": "web-servers",
        "hostnames": [
          "${webContainerName}"
        ]
      }
    ]
  }
}
